            </MenuItem>
            <MenuItem Header="_About" Click="ShowInfo" />
        </Menu>
        <Canvas Name="MainCanvas" Margin="0,18,1000,1000" Width="950" Height="950"/>
        <TextBox Name="AgentCount" HorizontalAlignment="Left" Height="23" Margin="986,54,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120"/>
