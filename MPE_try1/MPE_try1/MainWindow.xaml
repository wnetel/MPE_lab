        <Button Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="986,387,0,0" VerticalAlignment="Top" Width="75" Click="ResetButton_Click"/>
        <CheckBox Name="ShowPaths" Content="Show Paths" HorizontalAlignment="Left" Margin="986,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Collision #" HorizontalAlignment="Left" Margin="986,429,0,0" VerticalAlignment="Top"/>
        <Label Name="CollisionsCount" Content="None" HorizontalAlignment="Left" Margin="1085,429,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LoggingField" HorizontalAlignment="Left" Height="509" Margin="955,460,-5,0" VerticalAlignment="Top" Width="242"/>
